<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_gps_route_sheet_tree" model="ir.ui.view">
        <field name="name">gps.route.sheet.tree</field>
        <field name="model">gps.route.sheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="driver_name"/>
            </tree>
        </field>
    </record>

    <record id="view_gps_route_sheet_form" model="ir.ui.view">
        <field name="name">gps.route.sheet.form</field>
        <field name="model">gps.route.sheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="vehicle_id"/>
                        <field name="driver_name"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <notebook>
                        <page string="Trips">
                            <field name="trip_ids">
                                <tree editable="bottom">
                                    <field name="trip_date"/>
                                    <field name="route_description"/>
                                    <field name="trip_purpose_id"/>
                                    <field name="trip_purpose_other"/>
                                    <field name="in_city_km"/>
                                    <field name="outside_city_km"/>
                                    <field name="total_km"/>
                                    <field name="fuel_liters"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_gps_trip_purpose_tree" model="ir.ui.view">
        <field name="name">gps.trip.purpose.tree</field>
        <field name="model">gps.trip.purpose</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name_uk"/>
                <field name="is_active"/>
                <field name="sort_order"/>
            </tree>
        </field>
    </record>

    <record id="view_gps_trip_purpose_form" model="ir.ui.view">
        <field name="name">gps.trip.purpose.form</field>
        <field name="model">gps.trip.purpose</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name_uk"/>
                        <field name="is_active"/>
                        <field name="sort_order"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_gps_route_sheet" model="ir.actions.act_window">
        <field name="name">GPS Route Sheets</field>
        <field name="res_model">gps.route.sheet</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_gps_trip_purpose" model="ir.actions.act_window">
        <field name="name">Trip Purposes</field>
        <field name="res_model">gps.trip.purpose</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_gps_root" name="GPS Route Sheets" parent="fleet.fleet_menu_root" sequence="80"/>
    <menuitem id="menu_gps_route_sheet" name="Route Sheets" parent="menu_gps_root" action="action_gps_route_sheet" sequence="10"/>
    <menuitem id="menu_gps_trip_purpose" name="Trip Purposes" parent="menu_gps_root" action="action_gps_trip_purpose" sequence="20"/>
</odoo>
