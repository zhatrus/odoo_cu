<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_gps_route_sheet" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.gps.route.sheet</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="GPS Route Sheet" string="GPS Route Sheet">
                    <h2>GPS Route Sheet</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="gps_db_host"/>
                                <div class="text-muted">External GPS database connection.</div>
                                <div class="mt16">
                                    <field name="gps_db_host" placeholder="Host"/>
                                    <field name="gps_db_port" placeholder="Port"/>
                                    <field name="gps_db_name" placeholder="Database"/>
                                    <field name="gps_db_user" placeholder="User"/>
                                    <field name="gps_db_password" placeholder="Password" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
