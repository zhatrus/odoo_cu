<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vehicle Sync Wizard Form View -->
    <record id="view_vehicle_sync_wizard_form" model="ir.ui.view">
        <field name="name">vehicle.sync.wizard.form</field>
        <field name="model">vehicle.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Synchronize Vehicles from GPS Database">
                <group>
                    <group>
                        <field name="state" invisible="1"/>
                        <field name="sync_mode" readonly="state == 'done'"/>
                    </group>
                </group>
                <group invisible="state != 'done'">
                    <group>
                        <field name="vehicle_count"/>
                        <field name="result_message" colspan="2"/>
                    </group>
                </group>
                <footer>
                    <button string="Synchronize" name="action_sync_vehicles" type="object" class="btn-primary" invisible="state == 'done'"/>
                    <button string="View Vehicles" name="action_close" type="object" class="btn-primary" invisible="state != 'done'"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Server Action to open Vehicle Sync Wizard -->
    <record id="action_vehicle_sync_wizard" model="ir.actions.server">
        <field name="name">Sync Vehicles from GPS</field>
        <field name="model_id" ref="fleet.model_fleet_vehicle"/>
        <field name="binding_model_id" ref="fleet.model_fleet_vehicle"/>
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Sync Vehicles from GPS',
    'res_model': 'vehicle.sync.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': {},
}
        </field>
    </record>
</odoo>
